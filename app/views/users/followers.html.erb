<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-4">
    <h1>フォロワーリスト</h1>
    <ul>
      <% @users.each do |u| %>
        <li class="user_followers">
          <span class="name"><%= u.name %></span>
          <%= gravatar_for @user %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-4"></div>
</div>